---
interface Props {
  id: string;
  title: string;
}

const { id, title } = Astro.props;
---

<section
  id={id}
  class="flex flex-col text-center prose-invert prose-p:px-5 prose-p:mb-4 pb-28 md:prose-p:px-0"
>
  <h1 class="text-3xl font-bold mb-4 text-center">{title}</h1>

  <slot />
</section>
